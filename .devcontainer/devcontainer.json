{
  "name": "Model Packages Prototype",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",

  "features": {
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "10.0"
    }
  },

  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },

  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y --no-install-recommends libgomp1 && dotnet restore && dotnet build",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "editorconfig.editorconfig"
      ],
      "settings": {
        "dotnet.defaultSolution": "ModelPackages.slnx"
      }
    }
  },

  "remoteEnv": {
    "DOTNET_CLI_TELEMETRY_OPTOUT": "1",
    "DOTNET_NOLOGO": "1"
  }
}
